<h1>Listing notes</h1>

<%= form_tag(search_notes_path, :method => "get") do %>
  <%= label_tag(:keywords, "Recherche:") %>
  <%= text_field_tag(:keywords,@keywords_value) %>
  <%= submit_tag("Envoyer") %>
<br /><br />
<% end %>

<table class="table table-bordered table-striped" id="notes">
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.user %></td>
    <td><%= note.content.html_safe %></td>
    <td width='10'>
      <%= link_to note, :class => "btn" do %>
        <i class="icon-search"></i>
      <%end%>
    </td>
    <td width='10'>
      <%= link_to edit_note_path(note), :class => "btn" do %>
        <i class="icon-edit"></i>
        <%end%>
    </td>
    <td width='10'>
      <%= link_to note, confirm: 'Are you sure?', method: :delete, :class => "btn" do %>
        <i class="icon-trash"></i>
        <%end%>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Note', new_note_path, :class => "btn btn-primary" %>  <%= link_to 'Back', notes_path, :class => "btn btn-primary" %>
