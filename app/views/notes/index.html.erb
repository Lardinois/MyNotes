<h1>Listing notes</h1>
<%= form_tag(search_notes_path, :method => "get") do %>
  <%= label_tag(:keywords, "Recherche:") %>
<div class="input-append">
  <%= text_field_tag(:keywords,@keywords_value) %>
  <%= submit_tag("Envoyer",:class => "btn btn-primary") %>
</div>
<br /><br />
<% end %>

<table class="table table-striped table-condensed" id="notes">
  <tbody>
    <tr>
      <th>Titre</th>
      <th>Utilisateur</th>
      <th>Contenu</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  <%= render @notes %>
  <tbody>
</table>

<br />

<%= link_to 'New Note', new_note_path, :class => "btn btn-primary" %>  <%= link_to 'Back', notes_path, :class => "btn btn-primary" %>
